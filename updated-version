<script>
    document.getElementById("add-conviction").addEventListener("click", function() {
        // Create a new conviction section
        const convictionDiv = document.createElement("div");
        convictionDiv.classList.add("row", "conviction-fields");

        // Add the fields for the new conviction
        convictionDiv.innerHTML = `
            <div class="col">
                <label for="start-date">Date Occurred:</label>
                <input type="date" name="start-date">
            </div>
            <div class="col">
                <label for="misdemeanor-felony">Misdemeanor/Felony:</label>
                <select name="misdemeanor-felony">
                    <option value="none">Select one</option>
                    <option value="misdemeanor">Misdemeanor</option>
                    <option value="felony">Felony</option>
                </select>
            </div>
            <div class="col">
                <label for="description">Description:</label>
                <input type="text" name="description" placeholder="Description">
            </div>
            <div class="col">
                <label for="confinement">Diciplinary Action Taken:</label>
                <select name="confinement">
                    <option value="none">Select one</option>
                    <option value="confinement">Confinement</option>
                    <option value="probation">Probation</option>
                    <option value="community-service">Community Service</option>
                </select>
            </div>
            <div class="col">
                <label for="months-years">Sentence Duration:</label>
                <input type="text" name="months-years" placeholder="Months/Years">
            </div>
            <div class="col">
                <button type="button" class="remove-conviction">Remove</button>
            </div>
        `;

        // Append the new conviction section to the form
        document.getElementById("conviction-form").appendChild(convictionDiv);

        // Add event listener to the remove button
        convictionDiv.querySelector(".remove-conviction").addEventListener("click", function() {
            convictionDiv.remove();
        });
    });
</script>


