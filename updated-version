        <div class="row conviction-fields">
            <div class="col">
                <label for="start-date">Date Occurred:</label>
                <input type="date" id="start-date">
            </div>
            <div class="col">
                <label for="misdemeanor-felony">Misdemeanor/Felony:</label>
                <select id="misdemeanor-felony">
                    <option value="none">Select one</option>
                    <option value="misdemeanor">Misdemeanor</option>
                    <option value="felony">Felony</option>
                </select>
            </div>
            <div class="col">
                <label for="description">Description:</label>
                <input type="text" id="description" placeholder="Description">
            </div>
            <div class="col">
                <label for="confinement">Disciplinary Action Taken:</label>
                <select id="confinement">
                    <option value="none">Select one</option>
                    <option value="confinement">Confinement</option>
                    <option value="probation">Probation</option>
                    <option value="community-service">Community Service</option>
                </select>
            </div>
            <div class="col">
                <label for="months-years">Sentence Duration:</label>
                <input type="text" id="months-years" placeholder="Months">
            </div>
        </div>
        <button type="button" id="add-conviction">Add another conviction</button>
        <button type="button" onclick="nextSection('background', 'education')">Move to Education</button>
    </form>
